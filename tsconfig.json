{
   "compilerOptions": {
      "lib": [
         "es5",
         "es6"
      ],
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "outDir": "./dist",
      "strict": true, 
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "sourceMap": true,
      "esModuleInterop": true,
      "skipLibCheck": true,           
      "forceConsistentCasingInFileNames": true
   },
   "include": ["./src/**/*.ts", "./typORM/**/*.ts"],
   "exclude": ["./dist", "node_modules"]
}